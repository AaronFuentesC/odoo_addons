<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gestor_proyectos_aaron.actividad_list">
      <field name="name">Lista de actividades</field>
      <field name="model">gestor_proyectos_aaron.actividad</field>
      <field name="arch" type="xml">
        <list>
          <field name="descripcionActividad"/>
          <field name="fechaInicio"/>
          <field name="fechaFin"/>
          <field name="responsableActividad"/>
          <field name="trabajo_id"/>
          <field name="state_id"/>
          <field name="porcentajeIndividual"/>

        </list>
      </field>
    </record>

      <record id="view_proyecto_form" model="ir.ui.view">
      <field name="name">Formulario de actividades</field>
      <field name="model">gestor_proyectos_aaron.actividad</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="descripcionActividad"/>
              <field name="fechaInicio"/>
              <field name="fechaFin"/>
            </group>
            <group>
              <field name="responsableActividad"/>
              <field name="state_id"/>
              <field name="trabajo_id"/>
              <field name="porcentajeIndividual"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gestor_proyectos_aaron.actividad_action_window">
      <field name="name">Vista de actividades</field>
      <field name="res_model">gestor_proyectos_aaron.actividad</field>
      <field name="view_mode">list,form</field>
    </record>


  </data>
</odoo>
