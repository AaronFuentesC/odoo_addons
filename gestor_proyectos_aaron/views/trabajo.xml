<odoo>
    <data>
    <!-- explicit list view definition -->


    <record model="ir.ui.view" id="gestor_proyectos_aaron.trabajo_list">
        <field name="name">Lista de trabajos</field>
        <field name="model">gestor_proyectos_aaron.trabajo</field>
        <field name="arch" type="xml">
        <list>
            <field name="descripcionTrabajo"/>
            <field name="fechaInicio"/>
            <field name="fechaFin"/>
            <field name="responsableTrabajo"/>
            <field name = "proyecto_id"/>

        </list>
        </field>
    </record>


    <!-- actions opening views on models -->


    <record model="ir.actions.act_window" id="gestor_proyectos_aaron.trabajo_action_window">
        <field name="name">Vista de proyectos</field>
        <field name="res_model">gestor_proyectos_aaron.trabajo</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem name="Trabajos" id="gestor_proyectos_aaron.menu_2_list" parent="gestor_proyectos_aaron.menu_1"
            action="gestor_proyectos_aaron.trabajo_action_window"/>

    </data>
</odoo>
