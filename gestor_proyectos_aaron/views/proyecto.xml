<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gestor_proyectos_aaron.proyecto_list">
      <field name="name">Lista de proyectos</field>
      <field name="model">gestor_proyectos_aaron.proyecto</field>
      <field name="arch" type="xml">
        <list>
          <field name="nombreProyecto"/>
          <field name="descripcionProyecto"/>
          <field name="fechaInicio"/>
          <field name="fechaFin"/>
          <field name="responsableProyecto"/>
          <field name="porcentajeIndividual"/>
          <field name="state_id"/>
          <field name="porcentaje_avance" widget="progressbar"/>


        </list>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gestor_proyectos_aaron.proyecto_action_window">
      <field name="name">Vista de proyectos</field>
      <field name="res_model">gestor_proyectos_aaron.proyecto</field>
      <field name="view_mode">list,form</field>
    </record>

<!-- Vista de formulario para autores -->
    <record id="view_proyecto_form" model="ir.ui.view">
      <field name="name">Formulario de proyectos</field>
      <field name="model">gestor_proyectos_aaron.proyecto</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="nombreProyecto"/>
              <field name="descripcionProyecto"/>
              <field name="fechaInicio"/>
              <field name="fechaFin"/>
            </group>
            <group>
              <field name="responsableProyecto"/>
              <field name="porcentajeIndividual"/>
              <field name="state_id"/>
            </group>
            <notebook>
              <page name="Trabajos asociados" string="Trabajos asociados">
                <field name="trabajos_ids"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="gestorProyectosAaron" id="gestor_proyectos_aaron.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu trabajos" id="gestor_proyectos_aaron.menu_1" parent="gestor_proyectos_aaron.menu_root"/>

    <!-- actions -->

    <menuitem name="Proyectos" id="gestor_proyectos_aaron.menu_1_list" parent="gestor_proyectos_aaron.menu_1"
              action="gestor_proyectos_aaron.proyecto_action_window"/>


  </data>
</odoo>
