<odoo>
    <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gestor_proyectos_aaron.estado_list">
      <field name="name">Lista de estados</field>
      <field name="model">gestor_proyectos_aaron.estado</field>
      <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="code"/>
        </list>
      </field>
    </record>
    


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gestor_proyectos_aaron.estado_action_window">
      <field name="name">Vista de actividades</field>
      <field name="res_model">gestor_proyectos_aaron.estado</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- actions -->

    <menuitem name="Estados" id="gestor_proyectos_aaron.menu_4_list" parent="gestor_proyectos_aaron.menu_1"
        action="gestor_proyectos_aaron.estado_action_window"/>

  </data>
</odoo>
